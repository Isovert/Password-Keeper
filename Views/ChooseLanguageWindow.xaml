<Window x:Class="PasswordKeeper.Views.ChooseLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordKeeper.Views"
        xmlns:p="clr-namespace:PasswordKeeper.Properties"
        mc:Ignorable="d"
        Title="ChooseLanguageWindow" Height="350" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Border Margin="10">
    <StackPanel>
        <TextBlock Text="{x:Static p:Resources.LABEL_LANGUAGE_PICK}"></TextBlock>
            <ListBox Height="200" ItemsSource="{Binding Languages}" SelectedItem="{Binding Path=SelectedLanguage, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="{x:Static p:Resources.BUTTON_SELECT}" Command="{Binding SaveLanguage}" Margin="0 10"></Button>
            <Button Content="{x:Static p:Resources.BUTTON_CLOSE}" Click="CloseWindow"></Button>
        </StackPanel>
    </Border>
</Window>
