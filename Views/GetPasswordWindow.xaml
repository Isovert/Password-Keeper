<Window x:Class="PasswordKeeper.Views.GetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordKeeper.Views"
        xmlns:p="clr-namespace:PasswordKeeper.Properties"
        mc:Ignorable="d"
        Title="Password Keeper" Height="120" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" >
            <DockPanel LastChildFill="True">
                <TextBlock Text="{x:Static p:Resources.LABEL_PASSWORD}" Margin="10"></TextBlock>
                <PasswordBox x:Name="passwordBox_MainPassword" Margin="10" PasswordChanged="passwordBox_MainPassword_PasswordChanged"/>
            </DockPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,10,0" Height="20" HorizontalAlignment="Right">
                <Button x:Name="button_OK" Content="{x:Static p:Resources.BUTTON_OK}" MinWidth="73" Click="button_OK_Click" ></Button>
                <Button x:Name="button_CANCEL" Content="{x:Static p:Resources.BUTTON_CANCEL}" MinWidth="73" Margin="10,0,0,0" Click="button_CANCEL_Click" ></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
